{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "sonar_desktop_app",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs":{
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "fr.akmot.sonar",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "sonar_desktop_app",
        "width": 800,
        "height": 600,
        "visible": false,
        "decorations": true,
        "center": false 
      },
      {
        "width": 800,
        "height": 600,
        "decorations": true,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "resizable": true,
        "center": false 
      }
    ]
  }
}
