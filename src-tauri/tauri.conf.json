{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sonar",
  "version": "3.10.7",
  "identifier": "fr.sonar.ssf",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "SONAR",
        "width": 1800,
        "height": 950,
        "create": false
      }
    ]
  },
  "bundle": {
    "homepage": "https://sonar-team.github.io/doc/",
    "category": "Utility",
    "license": "AGPL-3.0",
    "publisher": "avicocyprien@yahoo.com",
    "shortDescription": "Outil de Relev√© de matrice de flux",
    "copyright": "avicocyprien@yahoo.com",
    "active": true,
    "licenseFile": "../LICENSE.md",
    "targets": [
      "nsis",
      "deb",
      "rpm",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "languages": ["French"],
        "installerIcon": "icons\\installer_icon.ico",
        "headerImage": "windows\\header_image_nsis.bmp",
        "sidebarImage": "windows\\sidebar_image_nsis.bmp",
        "installerHooks": "windows\\hooks.nsh"
      }
    },
    "resources": {
      "resources/labels.csv": "resources/labels.csv",
      "windows/npcap-1.86.exe": "windows/npcap-1.86.exe"
    }
  },
  "plugins": {
    "cli": {
      "description": "Sonar CLI",
      "args": [
        {
          "short": "H",
          "name": "headless",
          "description": "Run without any window (headless mode)"
        }
      ],
      "subcommands": {
        "run": {
          "description": "Run the application",
          "args": [
            {
              "name": "debug",
              "description": "Run application in debug mode"
            }
          ]
        }
      }
    }
  }
}
