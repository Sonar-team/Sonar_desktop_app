{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "sonar_desktop_app",
    "version": "1.3.2"
  },
  "tauri": {
    "cli": {
      "description": "", 
      "longDescription": "",
      "beforeHelp": "", 
      "afterHelp": "", 
      "args": [
        {
          "name": "output",
          "index": 1,
          "takesValue": true
        },
        {
          "name": "interface",
          "index": 2,
          "takesValue": true
        },
        {
          "name": "time",
          "index": 3,
          "takesValue": true
        }
      ], 
      "subcommands": {
        "subcommand-name": {
          
        }
      }
    },
    "allowlist": {
      "all": true,
      "fs":{
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "fr.akmot.sonar",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
        ],
      "category": "Utility",
      "shortDescription": "Network audit software",
      "publisher": "Akmot",
      "copyright": "Copyright (c) 2012-2024 Cyprien Avico"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "title": "sonar_desktop_app",
        "width": 1800,
        "height": 1000,
        "visible": false,
        "decorations": true,
        "center": false 
      },
      {
        "width": 1800,
        "height": 1000,
        "title": "Sonar",
        "decorations": true,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "resizable": true,
        "center": false 
      }
    ]
  }
}
