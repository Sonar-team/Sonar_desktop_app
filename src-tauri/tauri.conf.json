{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sonar",
  "version": "3.9.3",
  "identifier": "fr.sonar.ssf",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
    
  },
  "app": {
    "windows": [
      {
        "title": "SONAR",
        "width": 1800,
        "height": 950
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "homepage": "https://sonar-team.github.io/doc/",
    "category": "Utility",
    "license": "AGPL-3.0",
    "publisher": "avicocyprien@yahoo.com",
    "licenseFile": "LICENSE.md",
    "shortDescription": "Outil de Relevé de matrice de flux",
    "copyright": "avicocyprien@yahoo.com",
    "active": true,
    "targets": [
      "msi",
      "deb",
      "rpm",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "fr-FR",
        "bannerPath": "windows\\sonarbanner.png",
        "dialogImagePath": "windows\\dialog.png"
      },
      "webviewInstallMode": {
        "type": "offlineInstaller"
      }
    },
    "resources": {
      "resources/labels.csv": "resources/labels.csv"
    },
    "longDescription": "SONAR est une application desktop de relevé de matrices de flux réseau.\n\nElle permet de capturer ou d’importer des flux réseau (PCAP) afin de visualiser les relations de communication entre équipements et protocoles, dans une approche factuelle et non interprétative.\n\nL’outil est conçu pour faciliter la compréhension des architectures réseau lors d’audits, d’arrêts techniques ou d’analyses a posteriori, avec un fort accent sur la lisibilité et la performance."

  }
}
