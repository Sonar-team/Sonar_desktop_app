{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sonar",
  "version": "3.9.5",
  "identifier": "fr.sonar.ssf",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
    
  },
  "app": {
    "windows": [
      {
        "title": "SONAR",
        "width": 1800,
        "height": 950
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "homepage": "https://sonar-team.github.io/doc/",
    "category": "Utility",
    "license": "AGPL-3.0",
    "publisher": "avicocyprien@yahoo.com",
    "shortDescription": "Outil de Relev√© de matrice de flux",
    "copyright": "avicocyprien@yahoo.com",
    "active": true,
    "targets": [
      "msi",
      "nsis",
      "deb",
      "rpm",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "fr-FR",
        "bannerPath": "windows\\sonarbanner.png",
        "dialogImagePath": "windows\\dialog.png"
      }
    },
    "resources": {
      "resources/labels.csv": "resources/labels.csv",
      "windows/npcap-1.85.exe": "windows/npcap-1.85.exe"
    }
  }
}
