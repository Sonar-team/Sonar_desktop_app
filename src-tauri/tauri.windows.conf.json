{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sonar",
  "version": "2.0.0",
  "identifier": "com.sonar.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "sonar",
        "width": 1800,
        "height": 950
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
        "resources/packet.dll",
        "resources/wpcap.dll"
      ]
  }
}
